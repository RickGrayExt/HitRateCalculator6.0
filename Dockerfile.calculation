# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy only the Calculation.Service project
COPY src/Contracts ./Contracts
COPY src/Calculation.Service ./Calculation.Service

# Restore and publish
RUN dotnet publish ./Calculation.Service/Calculation.Service.csproj -c Release -o /out

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /out .
EXPOSE 8080
ENTRYPOINT ["dotnet", "Calculation.Service.dll"]
